<odoo>

    <record model="ir.ui.view" id="account_payment_line_create_form_view">
        <field name="name">account.payment.line.create.form (in account_cash_discount_payment)</field>
        <field name="model">account.payment.line.create</field>
        <field name="inherit_id" ref="account_payment_order.account_payment_line_create_form"/>
        <field name="arch" type="xml">

            <field name="date_type" position="after">
                <field name="cash_discount_date_start"
                       attrs="{'invisible': [('date_type', '!=', 'discount_due_date')], 'required': [('date_type', '=', 'discount_due_date')]}"/>
                <field name="cash_discount_date_end"
                       attrs="{'invisible': [('date_type', '!=', 'discount_due_date')], 'required': [('date_type', '=', 'discount_due_date')]}"/>
            </field>

        </field>
    </record>

</odoo>
