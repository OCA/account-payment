<odoo>

    <record model="ir.ui.view" id="account_payment_line_form_view">
        <field name="name">account.payment.line.form (account_cash_discount_payment)</field>
        <field name="model">account.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.account_payment_line_form"/>
        <field name="arch" type="xml">

            <field name="date" position="after">
                <field name="pay_with_discount"/>
                <field name="discount_due_date"/>
                <field name="discount_amount"/>
            </field>

        </field>
    </record>

    <record model="ir.ui.view" id="account_payment_line_tree_view">
        <field name="name">account.payment.line.tree (account_cash_discount_payment)</field>
        <field name="model">account.payment.line</field>
        <field name="inherit_id" ref="account_payment_order.account_payment_line_tree"/>
        <field name="arch" type="xml">

            <field name="ml_maturity_date" position="after">
                <field name="discount_due_date"/>
            </field>

            <field name="amount_currency" position="after">
                <field name="pay_with_discount"/>
                <field name="discount_amount" />
            </field>

        </field>
    </record>

</odoo>
