<data noupdate="1">

    <record id="mail_template_notification" model="mail.template">
        <field name="name">Payment notification</field>
        <field name="auto_delete" eval="False" />
        <field name="model_id" ref="account.model_account_payment" />
        <field name="email_from">${object.company_id.email or ''}</field>
        <field name="subject">${object.company_id.name: Payment Notification (Ref object.name)}</field>
        <field name="email_to">${object.get_email_to() or  ''}</field>
        <field name="report_template" ref="account_check_report.action_report_check_report"/>
        <field name="report_name">${(object.name or '').replace('/','_')}${object.state == 'draft' and '_draft' or ''}</field>
        <field name="lang">${object.get_contact_address().lang or 'en_US'}</field>
        <field name="body_html" type="html">
            <p>Dear ${object.partner_id.name},</p>
            <p> Your payment was processed and sent to the bank.</p>
            <p>
                It includes the following invoices:
            </p>
            <p>${object.get_invoice_names()}</p>
            <p>Total amount: <strong>${object.amount} ${object.currency_id.name}</strong></p>
            <div>
                <p>Thanks for your cooperation!</p>
                <p>--<br /><t t-esc="object.company_id.name" /></p>
                <p>
                    <small
                    >This is an automated notification. Replies will not be monitored nor answered. If you have questions, please contact us by the usual means.</small>
                </p>
            </div>
        </field>
    </record>

</data>
