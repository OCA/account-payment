<odoo>

    <record id="invoice_supplier_form" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <button name="action_invoice_draft" position="after">
                    <field name="enable_cash_discount_tax" invisible="1"/>
                    <button name="action_add_cash_discount_tax_lines"
                            type="object"
                            string="Fill in Tax Cash Discount"
                            groups="account.group_account_invoice"
                            attrs="{'invisible': ['|', ('state', '!=', 'draft'), '|', ('enable_cash_discount_tax', '=', False), ('enable_manual_cash_discount', '=', True)]}"/>
                </button>
            </field>
    </record>
</odoo>
