<odoo>

    <record model="ir.ui.view" id="view_partner_form_add_card">
        <field name="name">view.partner.form.add.card</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="account_invoice_credit_card.action_add_credit_card_token"
                    type="action"
                    string="Add ePayment Method"
                    class="oe_stat_button"
                    icon="fa-credit-card"
                    context="{'default_partner_id': active_id}">
                </button>
            </xpath>
            <xpath expr="//group[@name='banks']" position="after">
                <group string="Electronic Payment Method">
                    <field name="payment_token_id" domain="[('partner_id', '=', id)]"/>
                </group>
            </xpath>
            <xpath expr="//button[@icon='fa-credit-card']/div/span[@class='o_stat_text']" position="replace">
                <span class="o_stat_text">
                    Saved Payment Tokens
                </span>
            </xpath>

        </field>
    </record>

</odoo>
