<odoo>

    <record model="ir.ui.view" id="account_invoice_form_extended">
        <field name="name">account.invoice.form.extended</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form" />
        <field name="arch" type="xml">
            <div class="oe_button_box" position="inside">
                <button name="account_invoice_credit_card.action_add_credit_card_token"
                    type="action"
                    string="Add ePayment Method"
                    class="oe_stat_button"
                    icon="fa-credit-card"
                    context="{'default_partner_id': partner_id}">
                </button>
            </div>
        </field>
    </record>

</odoo>
