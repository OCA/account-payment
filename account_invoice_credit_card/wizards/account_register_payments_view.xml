<odoo>

    <record id="view_account_payment_from_invoices_inherit_add_payment_token" model="ir.ui.view">
        <field name="name">view.account.payment.from.invoices.inherit.add.payment.token</field>
        <field name="model">account.register.payments</field>
        <field name="inherit_id" ref="account.view_account_payment_from_invoices"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_method_code']" position="after">
                <field name="payment_token_id" options="{'no_create': True}"
                       attrs="{'invisible': [('payment_method_code', '!=', 'electronic')]}"
                       domain="[('partner_id', '=', partner_id)]"/>
            </xpath>
        </field>
    </record>
</odoo>
