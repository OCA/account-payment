<?xml version="1.0"?>
<odoo>
    <record id="view_create_add_credit_card_token" model="ir.ui.view">
        <field name="name">view.add.credit.card.token</field>
        <field name="model">add.credit.card.token</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>

                <group name="group_header">
                    <field name="provider_id" required="1"
                        widget="radio"/>
                    <field name="partner_id" invisible="context.get('active_id')"/>
                    <field name="provider_type" invisible="True"/>
                </group>
                <group attrs="{'invisible': [('provider_type','!=', 'cc')]}">
                    <field name="cc_number" attrs="{'required': [('provider_type','=', 'cc')]}"/>
                    <field name="cc_brand" readonly="True"/>
                    <field name="cc_expiry_month" placeholder="MM" attrs="{'required': [('provider_type','=', 'cc')]}"/>
                    <field name="cc_expiry_year" placeholder="YY" attrs="{'required': [('provider_type','=', 'cc')]}"/>
                    <field name="cc_cvc" attrs="{'required': [('provider_type','=', 'cc')]}"/>
                </group>
                <group attrs="{'invisible': [('provider_type','!=', 'ach')]}">
                    <field name="bank_acc_number" attrs="{'required': [('provider_type','=', 'ach')]}"/>
                    <field name="aba" attrs="{'required': [('provider_type','=', 'ach')]}"/>
                </group>

                <footer>
                    <button name="add_default_token" type="object"
                            class="btn-primary"
                            string="Add &amp; Set Default Token">
                    </button>
                    or
                    <button class="btn-primary" 
                    name="add_cc_token"
                    string="Add"
                    type="object" />
                    or
                    <button class="btn-default"
                    special="cancel"
                    string="Cancel" />
                </footer>

            </form>
        </field>
    </record>
    <record id="action_add_credit_card_token" model="ir.actions.act_window">
        <field name="name">Add Electronic Payment Method</field>
        <field name="res_model">add.credit.card.token</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_create_add_credit_card_token" />
        <field name="target">new</field>
    </record>
</odoo>
