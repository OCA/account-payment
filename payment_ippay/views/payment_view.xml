<odoo>

    <record id='acquirer_form_ippay' model='ir.ui.view'>
        <field name='name'>acquirer.form.ippay></field>
        <field name='model'>payment.acquirer</field>
        <field name='inherit_id' ref='payment.acquirer_form'/>
        <field name='arch' type='xml'>
            <xpath expr="//group[@name='acquirer']" position="after">
                <group attrs="{'invisible': [('provider', '!=', 'ippay')]}">
                    <field name='api_url' widget="url"/>
                    <field name='ippay_terminal_id' />
                </group>
            </xpath>
            <field name="journal_id" position="after">
                <field name="ippay_save_token"
                       attrs="{'invisible': [('provider', '!=', 'ippay')]}"
                />
            </field>
        </field>
    </record>

</odoo>
