<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_journal_creditcard_form" model="ir.ui.view">
        <field name="name">account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <field name="show_on_dashboard" position="after">
                <field name="credit_card"
                       attrs="{'invisible':[('type', '!=', 'bank')]}" />
                <field name="partner_id"
                       attrs="{'invisible':[('type', '!=', 'bank')],'required':[('credit_card', '=', True)],'readonly':[('credit_card', '=', False)]}" />
            </field>
        </field>
    </record>

</odoo>
