<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.account.check.layout</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="account.res_config_settings_view_form"/>
    <field name="arch" type="xml">

      <xpath expr="//div[@data-key='account_invoicing']" position="inside">

	<h2>Check Layout</h2>
        <div class="row mt16 o_settings_container">
          <div class="col-xs-12 col-md-6 o_setting_box" groups="base.group_no_one">
            <div class="o_setting_left_pane"/>
            <div class="o_setting_right_pane">
              <label string="Check Layout Verification"/>
              <div class="text-muted">
		Select how you want the check layout to be defined
              </div>
              <div class="text-muted">
		<field name="check_layout_verification" class="o_light_label" widget="radio"/>
              </div>
            </div>
	  </div>
	</div>

      </xpath>

    </field>
  </record>

</odoo>
