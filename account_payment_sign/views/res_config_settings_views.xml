<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.sign</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40" />
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//div[@id='pay_invoice_online_setting_container']"
                position="inside"
            >
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="invoice_portal_confirmation_sign"
                >
                    <div class="o_setting_left_pane">
                        <field name="invoice_portal_confirmation_sign" />
                    </div>
                    <div class="o_setting_right_pane" id="snailmail_settings">
                        <label for="invoice_portal_confirmation_sign" />
                        <div class="text-muted">
                            Request an online signature to confirm invoices
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
