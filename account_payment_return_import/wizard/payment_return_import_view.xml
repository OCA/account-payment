<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="account_payment_return_import_view" model="ir.ui.view">
            <field name="name">Import Payment Returns</field>
            <field name="model">payment.return.import</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Import Payment Returns">
                    <field name="data_file"/>
                    <field name="hide_journal_field" invisible="1"/>
                    <label for="journal_id"/>
                    <field name="journal_id"
                           domain="[('type', '=', 'bank')]"
                           attrs="{'invisible': [('hide_journal_field', '=', True)]}"
                           context="{'default_type':'bank'}"
                    />
                    <br/><br/><b> How to import your payment return :</b>
                    <br/><label string= "1. Download your Payment Return file from your bank website."/>
                    <br/><label string= "2. Make sure you have installed the right module to support the file format."/>
                    <br/><label string= "3. Select the file and click 'Import'."/>
                    <footer>
                        <button name="import_file" string="_Import" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_account_payment_return_import" model="ir.actions.act_window">
            <field name="name">Import Payment Return</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payment.return.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="account_payment_return_import_view"/>
        </record>

        <menuitem id="menu_account_payment_return_import"
                  parent="account.menu_finance_receivables"
                  action="action_account_payment_return_import" sequence="22"/>

    </data>
</openerp>
