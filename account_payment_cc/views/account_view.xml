<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_journal_creditcard_form" model="ir.ui.view">
            <field name="name">account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <field name="type" on_change="onchange_type(type, currency)" />
                <field name="entry_posted" position="after">
                    <field name="support_creditcard_transactions" attrs="{'readonly':[('type','!=','bank')]}" />
                    <field name="partner_id" attrs="{'readonly':[('type','!=','bank'),('support_creditcard_transactions','=',False)]}" />
                </field>            
            </field>
        </record>

    </data>
</openerp>
