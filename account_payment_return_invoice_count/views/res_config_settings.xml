<odoo>

    <record model="ir.ui.view" id="res_config_settings_form_view">
        <field name="name">res.config.settings.form (in account_payment_return_invoice_count)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_followup']" position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Payment Return</span>
                        <div class="text-muted">
                            Block the invoice's move line after X payment returned.<br />
                            Set to 0 if you never want the invoice to be blocked.
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="account_payment_return_threshold" string="Threshold" class="col-lg-3 o_light_label"/>
                                <field name="account_payment_return_threshold" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>



</odoo>
