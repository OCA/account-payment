<odoo>
    <record id="product_template_form_view_exclude_shipping" model="ir.ui.view">
        <field name="name">product_template.form.view.exclude.shipping</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']/span[2]" position="after">
                <span class="d-inline-block">
                    <field name="is_exclude_shipping_amount" />
                    <label for="is_exclude_shipping_amount" />
                </span>
            </xpath>
        </field>
    </record>
</odoo>
