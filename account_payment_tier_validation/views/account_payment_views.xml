<odoo>
    <record id="view_account_payment_search" model="ir.ui.view">
        <field name="name">account.payment.search - account_move_tier_validation</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search" />
        <field name="arch" type="xml">
            <filter name="date" position="after">
                <separator />
                <filter
                    name="needs_review"
                    string="Needs my Review"
                    domain="[('reviewer_ids','in',uid), ('state', 'not in', ['posted', 'cancel'])]"
                    help="My Payments to review"
                />
                <filter
                    name="tier_validated"
                    string="Validated"
                    domain="[('validated', '=', True)]"
                    help="Payments validated and ready to be confirmed"
                />
            </filter>
        </field>
    </record>
</odoo>
